{% extends 'base.html.twig' %}

{% block title %}Followers{% endblock %}

{% block body %}
    <h1>Your Followers</h1>

    {% for followRequest in followers %}
        {% set followerProfile = followRequest.requester.profile %}
        <div class="card" style="display: flex; gap: 15px; align-items: center;">
            {% if followerProfile and followerProfile.photoFilename %}
                <img src="/uploads/photos/{{ followerProfile.photoFilename }}" class="avatar" alt="{{ followerProfile.displayName }}">
            {% else %}
                <div class="avatar" style="display: flex; align-items: center; justify-content: center; font-size: 20px; color: #666;">?</div>
            {% endif %}
            <div>
                <a href="{{ path('app_profile_show', {id: followRequest.requester.id}) }}">
                    <strong>{{ followerProfile ? followerProfile.displayName : followRequest.requester.email }}</strong>
                </a>
            </div>
        </div>
    {% else %}
        <p>No followers yet.</p>
    {% endfor %}
{% endblock %}

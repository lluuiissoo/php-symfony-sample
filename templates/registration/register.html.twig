{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Create Account</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {% if form.email.vars.errors|length > 0 %}
                <div class="form-error">{{ form_errors(form.email) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword, 'Password') }}
            {{ form_widget(form.plainPassword) }}
            {% if form.plainPassword.vars.errors|length > 0 %}
                <div class="form-error">{{ form_errors(form.plainPassword) }}</div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(form) }}

    <p>Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
{% endblock %}

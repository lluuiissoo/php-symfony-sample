{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1>Edit Profile</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.displayName) }}
            {{ form_widget(form.displayName) }}
            {{ form_errors(form.displayName) }}
        </div>

        <div class="form-group">
            {{ form_label(form.bio) }}
            {{ form_widget(form.bio) }}
            {{ form_errors(form.bio) }}
        </div>

        <div class="form-group">
            {{ form_label(form.photoFile) }}
            {{ form_widget(form.photoFile) }}
            {{ form_errors(form.photoFile) }}
            <small>Optional. JPEG or PNG, max 2 MB.</small>
            {% if form.vars.data.photoFilename %}
                <p>Current photo: <img src="/uploads/photos/{{ form.vars.data.photoFilename }}" class="avatar" alt="Profile photo"></p>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    {{ form_end(form) }}
{% endblock %}
